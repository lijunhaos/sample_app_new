<% provide(:title, '密码重置')%>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="panel panel-default">
      <div class="panel-heading">密码重置</div>
      <div class="panel-body">
        <%= form_for(:password_reset, url: password_resets_path) do |f| %>

            <div class="form-group">
              <%= f.text_field :email, type: :email, class: "form-control input-lg", placeholder: "Email" %>
            </div>
            <div class="form-group">
              <%= f.submit "重置", class: "btn btn-lg btn-primary", 'data-disable-with' => "正在登录" %>
            </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
