<% provide(:title, '密码重置')%>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="panel panel-default">
      <div class="panel-heading">密码重置</div>
      <div class="panel-body">
        <%= form_for(@user, url: password_reset_path(params[:id])) do |f| %>

            <%= render 'shared/error_messages', object: @user %>

            <%= hidden_field_tag :email, @user.email%>

            <div class="form-group">
              <%= f.password_field :password, class: "form-control input-lg", placeholder: "密码" %>
            </div>
            <div class="form-group">
              <%= f.password_field :password_confirmation, class: "form-control input-lg", placeholder: "确认密码" %>
            </div>

            <div class="form-group">
              <%= f.submit "更新密码", class: "btn btn-lg btn-primary", 'data-disable-with' => "正在登录" %>
            </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
