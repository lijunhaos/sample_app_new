<%= form_for(@user) do |f| %>

    <%= render 'shared/error_messages', object: @user %>

    <div class="form-group">
      <%= f.text_field :name, class: "form-control input-lg", placeholder: "用户名" %>
    </div>
    <div class="form-group">
      <%= f.text_field :email, type: :email, class: "form-control input-lg", placeholder: "Email" %>
    </div>
    <div class="form-group">
      <%= f.password_field :password, class: "form-control input-lg", placeholder: "密码" %>
    </div>
    <div class="form-group">
      <%= f.password_field :password_confirmation, class: "form-control input-lg", placeholder: "确认密码" %>
    </div>
    <div class="form-group">
      <%= f.submit yield(:button_text), class: "btn btn-lg btn-primary", 'data-disable-with' => "正在提交" %>
    </div>
<% end %>