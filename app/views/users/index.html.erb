<% provide(:title, '所有用户')%>
<h1>所有用户</h1>

<%= will_paginate %>

<ul class="users">
  <% @users.each do |user| %>
      <li>
        <%= gravatar_for user, size: 50 %>
        <%= link_to user.name, user %>
        <% if current_user.admin? && !current_user?(user) %>
            | <%= link_to "删除", user, method: :delete,
                          data: { confirm: "您确定要删除吗?" } %>
        <% end %>
      </li>
  <% end %>
</ul>

<%= will_paginate %>