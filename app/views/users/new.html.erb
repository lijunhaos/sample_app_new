<% provide(:title, '注册新用户')%>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="panel panel-default">
      <div class="panel-heading">注册新用户</div>
      <div class="panel-body">
        <%= form_for(@user, url:signup_path) do |f| %>

            <%= render 'shared/error_messages' %>

            <div class="form-group">
              <%= f.text_field :name, class: "form-control input-lg", placeholder: "用户名" %>
            </div>
            <div class="form-group">
              <%= f.text_field :email, type: :email, class: "form-control input-lg", placeholder: "Email" %>
            </div>
            <div class="form-group">
              <%= f.password_field :password, class: "form-control input-lg", placeholder: "密码" %>
            </div>
            <div class="form-group">
              <%= f.password_field :password_confirmation, class: "form-control input-lg", placeholder: "确认密码" %>
            </div>
            <div class="form-group">
              <%= f.submit "提交注册信息", class: "btn btn-lg btn-primary", 'data-disable-with' => "正在提交" %>
            </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
