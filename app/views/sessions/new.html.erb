<% provide(:title, '登录')%>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="panel panel-default">
      <div class="panel-heading">登录</div>
      <div class="panel-body">
        <%= form_for(:session, url: login_path) do |f| %>

            <div class="form-group">
              <%= f.text_field :email, type: :email, class: "form-control input-lg", placeholder: "Email" %>
            </div>
            <div class="form-group">
              <%= f.password_field :password, class: "form-control input-lg", placeholder: "密码" %>
            </div>
            <!--<div class="from-group checkbox">-->
              <%= f.label :remember_me, class: "checkbox inline" do %>
                <%= f.check_box :remember_me %>
                  <span>记住登录状态</span>
              <% end %>
            <!--</div>-->
            <div class="form-group">
              <%= f.submit "登录", class: "btn btn-lg btn-primary", 'data-disable-with' => "正在登录" %>
            </div>
        <% end %>
      </div>
    </div>
    <p>新用户? <%= link_to "现在注册!", signup_path %></p>
  </div>
</div>
